    "e2e": "ng e2e",
    "serve:genkeys": "npx tls-keygen 'certificates/localhost.key' 'certificates/localhost.crt'",
    "serve:server": "npx http-server -g --cors -S -K certificates/localhost.key -C certificates/localhost.crt -c-1 dist/angular-tour-of-heroes",
